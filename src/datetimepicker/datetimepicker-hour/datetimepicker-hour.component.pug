table.table.table-condensed
  thead
    tr
      th.left
        a((click)="previousDay()")
          i.zmdi.zmdi-forward.zmdi-hc-flip-horizontal

      th.switch(colspan="5")
        a((click)="onHeaderClick.emit()")
          span([textContent]="_selectedDate | dateFormat: 'D MMM YYYY HH:mm'")

      th.right
        a((click)="nextDay()")
          i.zmdi.zmdi-forward

  tbody
    tr
      td(colspan="7")
        span(*ngFor="let item of hoursGrid; let i = index", [ngSwitch]="item.isDisabled")
          span.hour(*ngSwitchCase="true", [textContent]="item.label")
          a.hour(*ngSwitchDefault="", (click)="onPick.emit(item.timestamp)", [textContent]="item.label")
